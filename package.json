{
  "name": "increment",
  "displayName": "increment",
  "description": "",
  "version": "0.0.1",
  "publisher": "wj",
  "engines": {
    "vscode": "^1.43.0"
  },
  "categories": [
    "Formatters",
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wangjian92/increment.git"
  },
  "activationEvents": [
    "onCommand:extension.helloWorld",
    "onCommand:extension.incrementSelection",
    "onCommand:extension.decrementSelection",
    "onCommand:extension.reverseSelection"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "increment-selection",
      "properties": {
        "increment-selection.topToBottom": {
          "type": "boolean",
          "default": false,
          "description": "从上到下递增选择，而不是从选择创建顺序。"
        }
      }
    },
    "commands": [
      {
        "command": "extension.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "extension.incrementSelection",
        "title": "Increment Selection"
      },
      {
        "command": "extension.decrementSelection",
        "title": "Decrement Selection"
      },
      {
        "command": "extension.reverseSelection",
        "title": "Reverse Selection"
      }
    ],
    "keybindings": [
      {
        "command": "extension.incrementSelection",
        "key": "ctrl+alt+i",
        "mac": "cmd+alt+i",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.1",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.43.0",
    "eslint": "^6.8.0",
    "@typescript-eslint/parser": "^2.18.0",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "glob": "^7.1.6",
    "mocha": "^10.2.0",
    "typescript": "^3.7.5",
    "vscode-test": "^1.3.0"
  }
}
